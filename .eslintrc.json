{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": [],
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "import/extensions": ["always", {"ignorePackages": true}],
    "no-underscore-dangle": [
      2,
      {
        "allow": ["_id"]
      }
    ],
    "vue/html-self-closing": ["error", {
      "html": {
        "void": "never"
      }
    }],
    "no-param-reassign": ["error", { "props": false }]
  }
}
